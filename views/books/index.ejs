<h1>Search TripSheet</h1>

<form action="/books/books" method="GET">
  <div>
    <button class='btn btn' type="submit">Search</button>
    <button> <a class='btn btn' href="/home.html">Back </a></button>
  </div>
  <div>
    <label>Trip Sheet Number</label>
    <input type="text" name="title" value="<%= searchOptions.title %>">
  </div>
  <div>
    <label>Vehicl Number</label>
    <input type="text" name="description" 
    pattern="[A-Z]{2}[0-9]{1,2}[A-Z]{1,2}[0-9]{4}" title="KA99AA9999/KA99A9999"
    value="<%= searchOptions.description %>">
  </div>
  <div>
    <label>Trip Date After</label>
    <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
  </div>
  <div>
    <label>Trip Date Before</label>
    <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
  </div>
    
<div>
  <% books.forEach(book => { %>
    <a href="/books/<%= book.id %>">
      <img height="500" width="450" src="<%= book.coverImagePath %>">
    </a>
  <% }) %>
</div>
